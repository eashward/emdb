<div class="container">
  <div class="login-form mx-auto d-block w-100">
    <h1>Movies</h1>
    <%= form_for @movie do |f| %>
      <div class="form-group">
        <div class="control-label">
          <div class="field">
            <%= f.label :title %>:
          </div>

          <%= f.text_field :title %><br/>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label">
          <div class="field">
            <%= f.label :description %>:
          </div>

          <%= f.text_field :description %><br/>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label">
          <div class="field">
            <%= f.label :category_id %>:
          </div>
          <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: false %>
        </div>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
