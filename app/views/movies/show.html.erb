<br/>
  <div class="container">
    <div class="row flex-column-reverse flex-md-row">
      <div class="col-md-5">
        <div class="card">
          <div class="card-header">
            <img class="card-img" src="https://image.tmdb.org/t/p/w500/nBNZadXqJSdt05SHLqgT0HuC5Gm.jpg" alt="Card image">
          </div>
          <div class="card-body">
            <h1 class="card-title"><%= link_to "#{@movie.title}", movie_path(@movie.id) %></h1>
            <div class="container">
              <div class="row">
                <div class="col-4 metadata">
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <p><%= @movie.rating %>/10</p>
                </div>
                <div class="col-8 metadata"><%= @movie.category.try(:name) %></div>
              </div>
            </div>
            <p class="card-text"><div class="box a"><%= @movie.description.truncate(100) %></p>
            <a class="trailer-preview" href="https://youtu.be/ePbKGoIGAXY" target="new">
              <i class="fa fa-play" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

<div style="font-size:25px;"><%= link_to "Add Movie", new_movie_path %></div>

